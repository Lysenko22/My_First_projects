<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_graund"
    android:id="@+id/backGraund"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logo"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="100sp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/hint_user_field"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColorHint" /> 
<Button
    android:id="@+id/main_button"
    android:fontFamily="@font/montserrat_bold"
    android:layout_below="@+id/user_field"
    android:layout_marginTop="20sp"
    android:layout_marginHorizontal="97sp"
    android:backgroundTint="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/main_button"
    android:textSize="16sp" />

    <TextView
        android:id="@+id/result_info"
        android:layout_below="@+id/main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55sp"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="28sp" />
    <TextView
        android:id="@+id/feels_like"
        android:layout_below="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />


</RelativeLayout>